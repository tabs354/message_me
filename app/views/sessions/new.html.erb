<h2 class="ui center aligned icon header">
  <p>Welcome to MessageMe - A Complete Chat App</p>
  <i class="circular violet inverted power icon"></i>
  <small>Log in to continue</small>
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_for(:session, :html => {class: "ui form", role: "form"}, url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Username" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Enter Username", autofocus: true %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Password" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Enter Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "Login", class: 'ui violet submit button' %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui violet big button">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>